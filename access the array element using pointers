#include <stdio.h>
int main()
{
   int mark[10], i,*j ;
   j = &mark[0] ;

   for ( i=0;i<10;i++)
         scanf (" %d" ,&mark[i] );
   for ( i=0 ; i<10; i++)
     {
         printf ("\n  address of %dth palce is  %u",i,j);
         printf ("  element =  %d",*j ) ;
// increment of pointer to get nxt          location //
        j++ ;

     }
 
   return 0 ;
}