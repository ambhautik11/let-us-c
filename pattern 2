#include<stdio.h>
int main(void )
{
  int i,s=0,k=1,n,j;
  scanf("%d",&n);
  for (i=1; i<=n;i++)
      {
          s=s+i;
          for ( j=1 ; j <=n-i;j++)
                 printf(" ");
          while ( k<= s)
            {
                printf("%d ", k);
                k++;
            }
         printf("\n");
      }
  return 0;
}